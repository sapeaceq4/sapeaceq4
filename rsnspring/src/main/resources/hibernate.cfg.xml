<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
        <property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521:XE</property>
        <property name="hibernate.connection.password">ravdeep</property>
        <property name="hibernate.connection.username">ravdeep</property>
        <property name="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        <property name="hbm2ddl.auto">create</property>

        <mapping class="com.sapient.rsn.ace.hibernate.core.models.ItemSet"/>
        <mapping class="com.sapient.rsn.ace.hibernate.core.models.Book"/>
        <mapping class="com.sapient.rsn.ace.hibernate.core.models.Cover"/>
        <mapping class="com.sapient.rsn.ace.hibernate.core.models.Employee"/>
        <mapping class="com.sapient.rsn.ace.hibernate.core.models.Company"/>
        <mapping class="com.sapient.rsn.ace.hibernate.core.models.Country" />
        <mapping class="com.sapient.rsn.ace.hibernate.core.models.State" />
    </session-factory>
</hibernate-configuration>