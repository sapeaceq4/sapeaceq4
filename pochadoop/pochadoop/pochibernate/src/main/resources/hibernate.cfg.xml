<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="dialect">
            org.hibernate.dialect.Oracle10gDialect
        </property>
        <property name="connection.driver_class">
            oracle.jdbc.driver.OracleDriver
        </property>
        <property name="connection.url">
            jdbc:oracle:thin:@localhost:1521:xe
        </property>
        <property name="connection.username">ravdeep</property>
        <property name="connection.password">coder</property>
        <property name="default_schema">xe</property>
        <property name="hibernate.generate_statistics" >true</property>

        <!--<property name="connection.autocommit">false</property>-->

        <property name="show_sql">true</property>
        <property name="use_outer_join">false</property>
        <property name="hbm2ddl.auto">create</property>
        <property name="hibernate.cache.use_second_level_cache">false</property>
        <property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>




        <!--mappings-->

        <mapping class="org.sapient.rsn.persistence.model.entity"></mapping>
    </session-factory>

</hibernate-configuration>