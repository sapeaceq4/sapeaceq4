<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="com.sapient.ace.exercise1.config.model.Book" table="books">
      <meta attribute="class-description">
         This class contains the book detail. 
      </meta>
      <id name="isbn" type="java.lang.Long" column="isbn">
      </id>
      <property name="title" column="title" type="string"/>
      <property name="pubDate" column="pubDate" type="java.util.Date"/>
   </class>
</hibernate-mapping>