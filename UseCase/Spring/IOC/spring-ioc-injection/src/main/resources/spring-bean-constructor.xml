<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean id="student" class="com.sapient.ace.injection.constructor.Student">
		<constructor-arg name="age" value="25" />
		<constructor-arg name="name" value="consturctor student" />
		<constructor-arg name="address" ref="address" />
	</bean>

	<bean id="address" class="com.sapient.ace.injection.constructor.Address">
		<constructor-arg name="address" value="My Address" />
		<constructor-arg name="pinCode" value="3232111" />
	</bean>

</beans>
